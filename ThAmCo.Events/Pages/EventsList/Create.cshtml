@page
@model ThAmCo.Events.Pages.EventsList.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventDto.Title" class="control-label"></label>
                <input asp-for="EventDto.Title" class="form-control" />
                <span asp-validation-for="EventDto.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDto.Date" class="control-label"></label>
                <input asp-for="EventDto.Date" class="form-control" />
                <span asp-validation-for="EventDto.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDto.EventType" class="control-label"></label>
                <input asp-for="EventDto.EventType" class="form-control" />
                <span asp-validation-for="EventDto.EventType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EventDto.IsCancelled" /> @Html.DisplayNameFor(model => model.EventDto.IsCancelled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EventDto.VenueId" class="control-label"></label>
                <input asp-for="EventDto.VenueId" class="form-control" />
                <span asp-validation-for="EventDto.VenueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}