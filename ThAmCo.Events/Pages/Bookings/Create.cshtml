@page
@model ThAmCo.Events.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Book Guest";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Book Guest</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingDto.GuestId" class="control-label"></label>
                <select asp-for="BookingDto.GuestId" class="form-control" asp-items="Model.Guests"></select>
                <span asp-validation-for="BookingDto.GuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDto.EventId" class="control-label"></label>
                <select asp-for="BookingDto.EventId" class="form-control" asp-items="Model.Events"></select>
                <span asp-validation-for="BookingDto.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/EventsList/Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}